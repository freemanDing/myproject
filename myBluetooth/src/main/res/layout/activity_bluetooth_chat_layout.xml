<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e3e3"
    android:orientation="vertical"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:background="#04c9e2">

        <Button
            android:id="@+id/search"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/butto"
            android:text="@string/search"
            android:textColor="#04c9e2"
            android:textSize="15dp" />

        <Button
            android:id="@+id/discoverable1"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/butto"
            android:text="@string/discoverable1"
            android:textColor="#04c9e2"
            android:textSize="15dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/sou"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="接收数:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/incount"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#f7da89"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="8dp"
            android:text="发送数："
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/outcount"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#a4e7ae"

            android:textColor="#000000" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/receicer">

        <TextView
            android:id="@+id/in"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            android:layout_weight="0.3"
            android:hint="@string/in"
            android:scrollbars="vertical"
            android:textColor="#000000"
            android:textSize="15dp"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:id="@+id/clearcount"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/butto"
            android:onClick="onClearCountButtonClicked"
            android:text="@string/clearcount"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/svf"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/butto"
            android:onClick="onSaveButtonClicked"
            android:text="@string/svf"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/receicer">

        <EditText
            android:id="@+id/edit_text_out"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#ffffff"
            android:hint="@string/edtsend"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp">

        <Button
            android:id="@+id/btn_short"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/butto"
            android:onClick="onClearButtonClicked"
            android:text="短包命令"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_medium"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/butto"
            android:onClick="onClearButtonClicked"
            android:text="中包命令"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_long"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/butto"
            android:onClick="onClearButtonClicked"
            android:text="长包命令"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/butto"
            android:onClick="onClearButtonClicked"
            android:text="@string/clear"
            android:textColor="#000000"
            android:textSize="15dp" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp">

        <Button
            android:id="@+id/button_send"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/butto"
            android:text="单次发送"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/button_send1000"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/butto"
            android:text="1000次发送"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/button_deal"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/butto"
            android:text="数据分析"
            android:textColor="#000000"
            android:textSize="15dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/in16"
            style="@style/checkboxsy"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:checked="true"
            android:text="16进制显示"
            android:textColor="#000000"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/out16"
            style="@style/checkboxsy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/out16"
            android:textColor="#000000"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/autosend"
            style="@style/checkboxsy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:text="@string/autosend"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>